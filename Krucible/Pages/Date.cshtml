@page
@model Krucible.DateModel
@{
    ViewData["Title"] = "Date";
}

    <body onload="placeFocus()">
        <form method="post">
            <button type="submit" disabled style="display: none" aria-hidden="true"></button>

            <h1>오늘이 몇년 몇월 며칠이에요?</h1>
            <input type="submit"
                   value="Generate random date"
                   asp-page-handler="RandomDate" /> <br />
            @Html.TextBox("xz", @DateModel.dateTime, "{0:yyyy-MM-dd}", new { @class = "form-control", type = "date", style = "width: 200px" })
            <input type="text"
                   name="UserGuess"
                   id="UserGuess"
                   value="@Model.UserGuess"
                   size="40"
                   autocomplete="off"
                   onkeydown="KeyPressed(event)"
                   autofocus="autofocus" /><br />
            <input type="submit"
                   value="Behold!"
                   id="mainButton"
                   asp-page-handler="CheckAnswer" />
            <h2>@Model.UserGuess</h2>
            <h2>@Model.Result</h2>

            <script src="~/js/scripts.js"></script>
        </form>
    </body>